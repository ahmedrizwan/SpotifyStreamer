<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Orange" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/color_primary</item>-->
        <!--<item name="colorPrimaryDark">@color/color_primary_dark</item>-->
        <!--<item name="colorAccent">@color/color_accent</item>-->

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorPrimary">#ffff5722</item>
        <item name="colorPrimaryDark">#ffbf360c</item>
        <item name="colorAccent">#ffff5722</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.WhiteAccent" parent="AppTheme.Orange">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <color name="color_primary">#ff0048</color>
    <color name="color_primary_dark">#c80044</color>
    <color name="color_accent">#ff8d10</color>



    <!--Green Colors-->
    <color name="green">#4CAF50</color>
    <color name="greenDark">#388E3C</color>

    <style name="AppTheme.GreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="colorAccent">@color/green</item>
        <item name="actionModeBackground">@color/green</item>
        <item name="android:alertDialogTheme">@style/AppTheme.GreenTheme.Dialog</item>
    </style>

    <style name="AppTheme.GreenTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="colorAccent">@color/green</item>
    </style>


    <!--Blue Colors-->
    <color name="blue">#2196F3</color>
    <color name="blueDark">#1976D2</color>

    <style name="AppTheme.BlueTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="actionModeBackground">@color/blue</item>
        <item name="android:alertDialogTheme">@style/AppTheme.BlueTheme.Dialog</item>
    </style>

    <style name="AppTheme.BlueTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="colorAccent">@color/blue</item>
    </style>

</resources>
