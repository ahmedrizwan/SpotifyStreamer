<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="app.minimize.com.spotifystreamer.Activities.ContainerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72sp"
            android:id="@+id/layoutNowPlaying"
            android:theme="@style/AppTheme.Light"
            >
            <ImageView
                android:layout_width="@dimen/iv_artists_large"
                android:layout_height="@dimen/iv_artists_large"
                android:src="@drawable/ic_not_available"
                android:id="@+id/imageViewAlbum"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Name"
                android:layout_toRightOf="@id/imageViewAlbum"
                android:textSize="@dimen/tv_large"
                android:id="@+id/textViewTrackName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album"
                android:layout_toRightOf="@id/imageViewAlbum"
                android:layout_below="@id/textViewTrackName"
                android:textSize="@dimen/tv_large"
                android:id="@+id/textViewAlbumName"
                />
            <app.minimize.com.spotifystreamer.Views.PlayButton
                android:layout_width="@dimen/iv_play"
                android:layout_height="@dimen/iv_play"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


