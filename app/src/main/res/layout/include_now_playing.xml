<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="trackTitle" type="String"/>
        <variable name="albumTitle" type="String"/>
        <variable name="artistTitle" type="String"/>
        <variable name="nowPlayingVisible" type="Boolean"/>
        <variable name="albumImage" type="android.graphics.drawable.Drawable"/>
        <import type="android.view.View"/>

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/layoutNowPlaying"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:focusable="true"
        android:visibility="@{nowPlayingVisible? View.VISIBLE : View.GONE}"
        android:onClick="nowPlayingOnClick"
        app:cardCornerRadius="3dp"
        app:cardElevation="6dp"
        tools:showIn="@layout/activity_container">

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:padding="@dimen/default_margin">

            <ImageView
                android:id="@+id/imageViewAlbum"
                android:layout_width="@dimen/iv_previous_next"
                android:layout_height="@dimen/iv_previous_next"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@{albumImage!=null?albumImage:@drawable/ic_not_available}"
                />

            <app.minimize.com.spotifystreamer.Views.PlayButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="@dimen/iv_play"
                android:layout_height="@dimen/iv_play"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/colorPrimary"
                android:padding="@dimen/default_margin"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_toLeftOf="@id/buttonPlayPause"
                android:layout_toRightOf="@id/imageViewAlbum"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTrackName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{trackTitle}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tv_large"
                    />

                <TextView
                    android:id="@+id/textViewArtistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{albumTitle}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tv_small"
                    />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</layout>

