<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/black"
              android:orientation="vertical"
              android:padding="@dimen/default_margin">

    <ImageView
        android:id="@+id/imageViewArtist"
        android:layout_width="@dimen/iv_artists_large"
        android:layout_height="@dimen/iv_artists_large"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_not_available"
        android:transitionName="@string/artists_image_transition"
        />

    <TextView
        android:id="@+id/textViewArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/tv_extra_large"
        android:transitionName="@string/artists_image_transition"/>

</LinearLayout>